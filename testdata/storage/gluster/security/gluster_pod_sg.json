{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "glusterpd"
    },
    "spec": {
        "containers": [
            {
                "name": "glusterfs",
                "image": "quay.io/pdsilva1/hello-openshift@sha256:27d884a06ee89d49387a5514b7b4694c85b21fec2ad41df05033b2b33fbc02bb",
                "imagePullPolicy": "IfNotPresent",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/glusterfs",
                        "name": "glusterfsvol"
                    }
                ]
            }
        ],
        "securityContext": {
            "runAsUser": 101,
            "supplementalGroups": [123456]
        },
        "volumes": [
            {
                "name": "glusterfsvol",
                "glusterfs": {
                    "endpoints": "glusterfs-cluster",
                    "path": "testvol",
                    "readOnly": false
                }
            }
        ]
    }
}

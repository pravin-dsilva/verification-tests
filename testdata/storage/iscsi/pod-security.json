{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "iscsi",
        "labels": {
            "name": "iscsi"
        }
    },
    "spec": {
        "containers": [{
            "name": "iscsi",
            "image": "quay.io/pdsilva1/hello-openshift@sha256:27d884a06ee89d49387a5514b7b4694c85b21fec2ad41df05033b2b33fbc02bb",
            "imagePullPolicy": "IfNotPresent",
            "volumeMounts": [{
                "name": "iscsi",
                "mountPath": "/mnt/iscsi"
            }]
        }],
        "securityContext": {
            "runAsUser": 101010,
            "fsGroup": 123456,
            "seLinuxOptions": {
                "level": "s0:c13,c2"
            }
        },
        "volumes": [{
            "name": "iscsi",
            "persistentVolumeClaim": {
                "claimName": "pvc-iscsi"
            }
        }]
    }
}

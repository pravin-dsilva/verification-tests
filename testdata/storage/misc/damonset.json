{
    "apiVersion": "apps/v1",
    "kind": "DaemonSet",
    "metadata": {
        "name": "dpod"
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "dpod"
            }
        },
        "template":{
            "metadata": {
                "name": "dpod",
                "labels": {
                    "app": "dpod"
                }
            },
            "spec": {
                "containers": [{
                    "name": "myfrontend",
                    "image": "quay.io/pdsilva1/hello-openshift@sha256:27d884a06ee89d49387a5514b7b4694c85b21fec2ad41df05033b2b33fbc02bb",
                    "imagePullPolicy": "IfNotPresent",
                    "ports": [{
                        "containerPort": 80,
                        "name": "http-server"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/mnt/ds",
                        "name": "pvol"
                    }]
                }],
                "volumes": [{
                    "name": "pvol",
                    "persistentVolumeClaim": {
                        "claimName": "ds"
                    }
                }]
            }
        }
    }
}
